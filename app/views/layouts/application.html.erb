<!DOCTYPE html>
<html>
<head>
  <title>Roomieup</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if signed_in? %>
  <p class="username"><%= current_user.username %></p>
  <%= button_to "Sign Out", session_url, :method => :delete, class: "sign-btn" %>
<% else %>
  <%= link_to "Sign In", new_session_url, class: "sign-btn" %>
  <%= link_to "Sign Up", new_user_url, class: "sign-btn" %>
<% end %>

<br>

<%= render "layouts/errors" %>

<%= yield %>

</body>
</html>
